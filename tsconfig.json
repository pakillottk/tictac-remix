{
    "extends": "@tsconfig/recommended",
    "compilerOptions": {
      "incremental": true,
      "target": "ESNext",
      "module": "commonjs",
      "declaration": true,
      "sourceMap": true,
      "composite": true,
      "strict": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    }
  }